        today = mm + '/' + dd + '/' + yyyy;

    $('#btnRUN').click(function ()
    {
        if ($('#customercusstatment').val() == "0" || $('#agingdatecustomersatement').val() == " ")
        {
            alert('Please Select Customer and AgingDate.')
