                                <option value="@a.Name">@a.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="lable_branch">@localizer["By Model"]</label>
                    <select type="text" class="input_branch" id="byModel">
                        <option value="0">All Model</option>
                        @{
                            foreach (var a in Model.ModelMasters)
                            {
                                <option value="@a.Name">@a.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-4 ">
                    <button class="btn btn-xs btn-kernel" id="btnRunReport">@localizer["Filter"]</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <label class="lable_branch">@localizer["By Vendor Code"]</label>
                    <select type="text" class="input_branch" id="byVendorCode">
                        <option value="0">All Vendor Code</option>
                        @{
                            foreach (var a in Model.VendorCodeMasters)
                            {
                                <option value="@a.Name">@a.Name</option>
                            }
                        }
                    </select>
                </div>
                @*<div class="col-md-2">
                    <label class="lable_branch">@localizer["By Region"]</label>
                    <select type="text" class="input_branch" id="byRegion">
                        <option value="0">All Region</option>
                        @{
                            foreach (var a in Model.RegionMasters)
                            {
                                <option value="@a.Name">@a.Name</option>
                            }
                        }
                    </select>
                </div>*@
                <div class="col-md-2">
                    <label class="lable_branch">@localizer["By Warehose ID."]</label>
                    <select type="text" class="input_branch" id="byWarehoseID">
                        <option value="0">All Warehose ID.</option>
                        @{
                            foreach (var a in Model.WarehouseIDMasters)
                            {
                                <option value="@a.Name">@a.Name</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <!--End Filter-->
            <!--Load Panel-->
            <div class="loadpanel"></div>
            <!--End Load Panel-->
            <!--Bind Data to Grid-->
            <div class="container mt-3">
                <div class="row">
                    <div class="col-12">
                        <div class="demo-container">
                            <div id="gridContainer"></div>
                            @*<div class="options">
                                <div class="caption">Options</div>
                                <div class="option">
                                    <div id="autoExpand"></div>
                                </div>
                            </div>*@
                        </div>
                    </div>
                </div>
            </div>
            <!--End Bind Data to Grid-->
        </div>
    </div>
</div>

<script>
    window.jsPDF = window.jspdf.jsPDF;
    applyPlugin(window.jsPDF);
    var today = new Date();
    var dd = String(today.getDate()).padStart(2, '0');
    var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
    var yyyy = today.getFullYear();
    today = mm + '/' + dd + '/' + yyyy;
    loadReport(today, today,'','','','');
    $('#btnRunReport').click(function () {
        var datefrom = $('#datefrom').val();
        var dateto = $('#dateto').val();
        if (datefrom == '' || datefrom == null) {
            datefrom = today;
        }
        if (dateto == '' || dateto == null) {
            dateto = today;
        }
        var byMainGroup = ifToDo($('#byMainGroup'));
        var byModel = ifToDo($('#byModel'));
        var byVendorCode = ifToDo($('#byVendorCode'));
        var byWarehoseID = ifToDo($('#byWarehoseID'));
        loadReport(datefrom, dateto, byMainGroup, byModel, byVendorCode, byWarehoseID);
    });
    function filterData() {
        var datefrom = $('#datefrom').val();
        var dateto = $('#dateto').val();
        if (datefrom == '' || datefrom==null) {
            datefrom = today;
        }
        if (dateto == '' || dateto == null) {
            dateto = today;
        }
        var byMainGroup = ifToDo($('#byMainGroup'));
        var byModel = ifToDo($('#byModel'));
        var byVendorCode = ifToDo($('#byVendorCode'));
        var byWarehoseID = ifToDo($('#byWarehoseID'));
        loadReport(datefrom, dateto, byMainGroup, byModel, byVendorCode, byWarehoseID);
    }
    function ifToDo(condition) {
        if (condition.val() == '' || condition.val() == 0 || condition.val() == undefined || condition.val() == null) {
            return "";
        } else {
            return condition.val();
        }
    }
    var dataGrid = $("#gridContainer").dxDataGrid().dxDataGrid("instance");
    //$("#autoExpand").dxCheckBox({
    //    value: true,
    //    text: "Expand All Groups",
    //    onValueChanged: function (data) {
    //        console.log("hello")
    //        dataGrid.option("grouping.autoExpandAll", data.value);
    //    }
    //});
    function loadReport(datefrom, dateto, itemgroup, model, vendorcode, warehouse) {
        console.log(datefrom);
        console.log(dateto);
        console.log(itemgroup);
        console.log(model);
        console.log(vendorcode);
        console.log(warehouse);
        var loadPanel = $(".loadpanel").dxLoadPanel({
            shadingColor: "rgba(0,0,0,0.4)",
            position: { of: "#gridContainer" },
            visible: false,
            showIndicator: true,
            showPane: true,
            shading: false,
            closeOnOutsideClick: false,
        }).dxLoadPanel("instance");
        $.ajax({
            url: '@Url.Action("GetInventoryReportBySerials", "InventoryReportBySerial")',
            type: "GET",
            data: {
                datefrom: datefrom,
                dateto: dateto,
                itemgroup: itemgroup,
                model: model,
                vendorcode: vendorcode,
                warehouse: warehouse,
            },
            dataType: "JSON",
            beforeSend: function () {
                loadPanel.show();
            },
            success: function (data) {
                loadPanel.hide();
                console.log(data);
                $("#gridContainer").dxDataGrid({
                    dataSource: data,
                    loadPanel: {
                        enabled: true
                    },
                    hoverStateEnabled: true,
                    allowColumnResizing: true,
                    columnResizingMode: "nextColumn",
                    columnMinWidth: 50,
                    columnAutoWidth: true,
                    columnAutoWidth: true,
                    filterRow: {
                        visible: true,
                        applyFilter: "auto"
                    },
                    headerFilter: {
                        visible: true
                    },
                    showBorders: true,
                    scrolling: {
                        columnRenderingMode: "virtual"
                    },
                    export: {
                        enabled: true,
                    },
                    paging: {
                        pageSize: 10
                    },
                    pager: {
                        showPageSizeSelector: true,
                        allowedPageSizes: [5, 10, 20, 50, 100],
                        showInfo: true
                    },
                    grouping: {
                        contextMenuEnabled: true,
                        autoExpandAll: true,
                    },
                    groupPanel: {
                        visible: true,
                        allowColumnDragging: false,
                        expandMode: "rowClick",
                        autoExpandAll: true,
                        allowCollapsing: false,
                    },
                    onExporting: function (e) {
                        var workbook = new ExcelJS.Workbook();
                        var worksheet = workbook.addWorksheet('PSI Report');

                        DevExpress.excelExporter.exportDataGrid({
                            component: e.component,
                            worksheet: worksheet,
                            autoFilterEnabled: true
                        }).then(function () {
                            workbook.xlsx.writeBuffer().then(function (buffer) {
                                saveAs(new Blob([buffer], { type: 'application/octet-stream' }), 'PSIReport.xlsx');
                            });
                        });
                        e.cancel = true;
                    },
                    onToolbarPreparing: function (e) {
                        var dataGrid = e.component;
                        e.toolbarOptions.items.unshift({
                            location: "before",
                            template: function () {
                                return
                            }
                        },
                            {
                                location: "after",
                                widget: "dxButton",
                                options: {
                                    icon: "refresh",
                                    onClick: function () {
                                        dataGrid.refresh();
                                        filterData();
                                    }
                                }
                            },
                            {
                                location: "after",
                                widget: "dxButton",
                                options: {
                                    icon: "fas fa-file-pdf",
                                    onClick: function () {
                                        const doc = new jsPDF();
                                        DevExpress.pdfExporter.exportDataGrid({
                                            jsPDFDocument: doc,
                                            component: dataGrid
                                        }).then(function () {
                                            doc.save('PSIReport_' + today+'.pdf');
                                        });
                                    }
                                },
                                title: 'Export to PDF'
                            }
                        );
                    },
                    summary: {
                        totalItems: [
                            {
                                column: "Qty",
                                summaryType: "count"
                            }, {
                                column: "Qty",
                                displayFormat: "{0}Qty",
                                summaryType: "sum",
                                format: {
                                    type: "decimal",
                                    precision: 3
                                }
                            }
                        ]
                    },
                    columns: [
                        {
                            dataField: "ItemCode",
                            caption: "Item Code"
                        },
                        {
                            dataField: "VenderCode",
                            caption: "Vendor Code"
                        },
                        {
                            dataField: "ItemGroup",
                            caption: "Item Group"
                        },
                        {
                            dataField: "Category",
                            caption: "Category"
                        },
                        {
                            dataField: "SubCategory",
                            caption: "Sub-Category"
                        },
                        {
                            dataField: "Description",
                            caption: "Description"
                        },
                        {
                            dataField: "Year",
                            caption: "Year"
                        },
                        {
                            dataField: "Model",
                            caption: "Model"
                        },
                        {
                            dataField: "SerailNumber",
                            caption: "Serial Number"
                        },
                        {
                            dataField: "Warehouse",
                            caption: "Warehouse"
                        },
                        {
                            dataField: "Shelf",
                            caption: "Shelf"
                        },
                        {
                            dataField: "BinLocation",
                            caption: "Bin Location"
                        },
                        {
                            dataField: "Qty",
                            caption: "Q'ty"
                        },
                    ],
                });
                //btn_filter.removeClass("fa-spinner fa-spin");
            }
        });
    }
</script>
