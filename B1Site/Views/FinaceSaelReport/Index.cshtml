<script>
    var today = new Date();
    var dd = String(today.getDate()).padStart(2, '0');
    var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
    var yyyy = today.getFullYear();
    today = mm + '/' + dd + '/' + yyyy;
    loadReport(today, today);
    $('#btnRunReport').click(function () {
        var datefrom = $('#datefrom').val();
        var dateto = $('#dateto').val();
        if (datefrom == '' || datefrom == null) {
            datefrom = today;
        }
        if (dateto == '' || dateto == null) {
            dateto = today;
        }
        var byItemGroup = ifToDo($('#byItemGroup'));
        var byCategory = ifToDo($('#byCategory'));
        var BySaleemployee = ifToDo($('#BySaleemployee'));
        var bymeasure = ifToDo($('#byMeasure'));
        var byItemcode = ifToDo($('#byItemcode'));
        var bycuostmerid = ifToDo($('#byCustomerid'));
        var bysource = ifToDo($('#bySource'));
        //alert(byItemGroup);
        loadReport(datefrom, dateto,byItemGroup,byCategory,BySaleemployee,bymeasure,byItemcode,bycuostmerid,bysource);
    });
    function filterData() {
        var datefrom = $('#datefrom').val();
        var dateto = $('#dateto').val();
        if (datefrom == '' || datefrom==null) {
            datefrom = today;
        }
        if (dateto == '' || dateto == null) {
            dateto = today;
        }
        var byItemGroup = ifToDo($('#byItemGroup'));
        var byCategory = ifToDo($('#byCategory'));
        var BySaleemployee = ifToDo($('#BySaleemployee'));
        var bymeasure = ifToDo($('#byMeasure'));
        var byItemcode = ifToDo($('#byItemcode'));
        var bycuostmerid = ifToDo($('#byCustomerid'));
        var bysource = ifToDo($('#bySource'));
        loadReport(datefrom, dateto,byItemGroup,byCategory,BySaleemployee,bymeasure,byItemcode,bycuostmerid,bysource);
    }
    function ifToDo(condition) {
        if (condition.val() == '' || condition.val() == 0 || condition.val() == undefined || condition.val() == null) {
            return "";
        } else {
            return condition.val();
        }
    }
    function loadReport(datefrom, dateto,byItemsGroup,byCategroy,bysaleemployee,bymeasure,byItemcode,bycustomerid,bysource) {
        var loadPanel = $(".loadpanel").dxLoadPanel({
            shadingColor: "rgba(0,0,0,0.4)",
            position: { of: "#gridContainer" },
            visible: false,
            showIndicator: true,
            showPane: true,
            shading: false,
            closeOnOutsideClick: false,
        }).dxLoadPanel("instance");
        $.ajax({
            url: '@Url.Action("GetFinaceReports", "FinaceSaelReport")',
            type: "GET",
            data: {
                datefrom: datefrom,
                dateto: dateto,
                itemgroup: byItemsGroup,
                categroy: byCategroy,
                saleemployee: bysaleemployee,
                Measure: bymeasure,
                itemcode: byItemcode,
                customerid: bycustomerid,
                source: bysource
            },
            dataType: "JSON",
            beforeSend: function () {
                loadPanel.show();
            },
            success: function (data) {
                loadPanel.hide();
                $("#gridContainer").dxDataGrid({
                    dataSource: data,
                    loadPanel: {
                        enabled: true
                    },
                    hoverStateEnabled: true,
                    allowColumnResizing: true,
                    columnResizingMode: "nextColumn",
                    columnMinWidth: 50,
                    columnAutoWidth: true,
                    columnAutoWidth: true,
                    filterRow: {
                        visible: true,
                        applyFilter: "auto"
                    },
                    headerFilter: {
                        visible: true
                    },
                    showBorders: true,
                    scrolling: {
                        columnRenderingMode: "virtual"
                    },
                    export: {
                        enabled: true,
                    },
                    paging: {
                        pageSize: 10
                    },
                    pager: {
                        showPageSizeSelector: true,
                        allowedPageSizes: [5, 10, 20, 50, 100],
                        showInfo: true
                    },
                    groupPanel: {
                        visible: false
                    },
                    onExporting: function (e) {
                        var workbook = new ExcelJS.Workbook();
                        var worksheet = workbook.addWorksheet('SaleReport');

                        DevExpress.excelExporter.exportDataGrid({
                            component: e.component,
                            worksheet: worksheet,
                            autoFilterEnabled: true
                        }).then(function () {
                            workbook.xlsx.writeBuffer().then(function (buffer) {
                                saveAs(new Blob([buffer], { type: 'application/octet-stream' }), 'SaleDailyReport.xlsx');
                            });
                        });
                        e.cancel = true;
                    },
